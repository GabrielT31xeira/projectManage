@model projectManage.Models.Projeto
@{
    Layout = "~/Views/Shared/_LayoutGerente.cshtml";
}
@{
    ViewBag.Title = "Editar Projeto";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="card w-50 shadow-lg">
        <div class="card-body">
            <h2 class="text-center text-primary">Editar Projeto</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row mb-3 offset-sm-1 mt-3">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3 offset-sm-1">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3 offset-sm-1">
                    @Html.LabelFor(model => model.DataInicio, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.DataInicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.DataInicio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3 offset-sm-1">
                    @Html.LabelFor(model => model.DataFim, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.DataFim, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.DataFim, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-8 offset-sm-2 d-flex justify-content-center">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                        @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary ms-2" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
